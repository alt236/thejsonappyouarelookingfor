<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DemoApp.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>

        <item name="colorButtonNormal">@color/primary_light</item>
        <item name="colorControlNormal">@color/color_control_normal</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/color_control_highlight</item>

    </style>
</resources>