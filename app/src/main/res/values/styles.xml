<resources>

    <style name="DemoApp">

    </style>

    <style name="DemoApp.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>

        <item name="colorButtonNormal">@color/primary_light</item>
        <item name="colorControlNormal">@color/color_control_normal</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/color_control_highlight</item>

    </style>

    <style name="DemoApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="DemoApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- ToolBar -->
    <style name="DemoApp.ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorPrimary">@color/primary_light</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="actionMenuTextColor">@color/accent</item>
        <item name="android:background">@color/primary</item>

    </style>

    <style name="MovieDb.AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="MovieDb.AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
